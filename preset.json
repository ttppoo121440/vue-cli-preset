{
  "useConfigFiles": true,
  "cssPreprocessor": "node-sass",
  "plugins": {
    "@vue/cli-plugin-babel": {},
    "@vue/cli-plugin-eslint": {
      "config": "airbab",
      "lintOn": [
        "save",
        "commit"
      ]
    },
    "@vue/cli-plugin-router": {},
    "@vue/cli-plugin-vuex": {},
    "configs": {
      "vue": {
        "productionSourceMap": false,
        "devServer": {
          "overlay": {
            "warnings": true,
            "errors": true
          },
          "disableHostCheck": true
        },
        "lintOnSave": true
      }
    }
  }
}